<%= form_for @recipe do |f| %>
  <%= f.label "Recipe title" %>
  <%= f.text_field :title %><br>
 
  <%= f.fields_for :ingredients do |indg| %>
    <%= indg.label "Ingredient Name" %>
    <%= indg.text_field :name %><br>
 
    <%= indg.label :quantity %>
    <%= indg.text_field :quantity %><br>
  <% end %>
 
  <%= f.submit %>
<% end %>
