<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
 
  <%= f.fields_for :ingredients do |indg| %>
    <%= indg.label :ingredient_name %>
    <%= indg.text_field :ingredient_name %><br>
 
    <%= indg.label :ingredient_quantity %>
    <%= indg.text_field :ingredient_quantity %><br>
  <% end %>
 
  <%= f.submit %>
<% end %>
